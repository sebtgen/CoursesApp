<h1 class="text-center">Pagina de inicio</h1>
<hr />

@{
    bool foundRegular = false;
    bool foundOnline = false;
}

@foreach (Course c in Model)
{
    if (c.GetType() == typeof(RegularCourse))
    {
        foundRegular = true;
    }
    else if (c.GetType() == typeof(OnlineCourse))
    {
        foundOnline = true;
    }
}

 @{if (foundRegular)
        {
<h4 class="text-center">Regular courses</h4>
<table class="table table-striped table-bordered table-sm">
    <thead class="bg-dark text-white">
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th>Max students</th>
            <th>Start date</th>
            <th>Location</th>
            <th>Meeting days</th>
        </tr>
    </thead>

    <tbody class="table-striped">
        @foreach (Course c in Model)
        {
            <tr>
                @if (c.GetType() == typeof(RegularCourse))
                {
                    <td>@c.Title</td>
                    <td>@c.Description</td>
                    <td>@c.MaxStudents</td>
                    <td>@c.StartDate.ToShortDateString()</td>

                    RegularCourse rc = c as RegularCourse;
                    <td>@rc.Location</td>
                    <td>@rc.MeetingDays</td>
                }
            </tr>
        }
    </tbody>
</table>
        }}

@{if (foundOnline)
    {
        <h4 class="text-center">Online courses</h4>
        <table class="table table-striped table-bordered table-sm">
            <thead class="bg-dark text-white">
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th>Max students</th>
                    <th>Start date</th>
                    <th>Duration</th>
                    <th>Platform</th>
                </tr>
            </thead>

            <tbody class="table-striped">
                @foreach (Course c in Model)
                {
                    <tr>
                        @if (c.GetType() == typeof(OnlineCourse))
                        {
                            <td>@c.Title</td>
                            <td>@c.Description</td>
                            <td>@c.MaxStudents</td>
                            <td>@c.StartDate.ToShortDateString()</td>

                            OnlineCourse oc = c as OnlineCourse;
                            <td>@oc.DurationHours</td>
                            <td>@oc.Platform</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }}