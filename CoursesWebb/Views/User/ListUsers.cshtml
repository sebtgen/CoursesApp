@using Domain;
@model List<User>;

@{
    bool foundStudent = false;
    bool foundInstructor = false;
}
<h1 class="text-center">Registered users</h1>
<hr />

@foreach (User u in Model)
{
    if (u.GetType() == typeof(Student))
    {
        foundStudent = true;
    }
    else if (u.GetType() == typeof(Instructor))
    {
        foundInstructor = true;
    }
}

@{
    if (foundStudent)
    {
        <h4 class="text-center">Students</h4>

        <table class="table table-striped table-bordered table-sm">
            <thead class="bg-dark text-white">
                <tr>
                    <th scope="col">Email</th>
                    <th scope="col">Password</th>
                    <th>Phone number</th>
                    <th>Student name</th>
                    <th>Date birth</th>
                    <th>Remote only</th>
                </tr>
            </thead>

            <tbody class="table-striped">
                @foreach (User u in Model)
                {
                    <tr>
                        @if (u.GetType() == typeof(Student))
                        {
                            <td>@u.Email</td>
                            <td>@u.Password</td>
                            <td>@u.PhoneNumber</td>

                            Student s = u as Student;
                            <td>@s.StudentName</td>
                            <td>@s.DateBirth</td>
                            <td>@s.RemoteOnly</td>
                        }
                    </tr>
                }
            </tbody>
        </table>

    }
}

@{
    if (foundInstructor)
    {
        <h4 class="text-center">Instructors</h4>
        <table class="table table-striped table-bordered table-sm">
            <thead class="bg-dark text-white">
                <tr>
                    <th scope="col">Email</th>
                    <th scope="col">Password</th>
                    <th>Phone number</th>
                    <th>Instructor name</th>
                    <th>Start date</th>
                    <th>Courses teach</th>
                </tr>
            </thead>

            <tbody class="table-striped">
                @foreach (User u in Model)
                {
                    <tr>
                        @if (u.GetType() == typeof(Instructor))
                        {
                            <td>@u.Email</td>
                            <td>@u.Password</td>
                            <td>@u.PhoneNumber</td>

                            Instructor i = u as Instructor;
                            string list = i.FindCID();
                            <td>@i.InstructorName</td>
                            <td>@i.StartDate</td>
                            <td>
                                @list
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>

    }
}
<div class="d-flex justify-content-center">
    <a href="/Home/Index" class="btn btn-light">Back to home page</a>
</div>