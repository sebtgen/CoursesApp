@using Domain;
@model Enrollment

@{
    if (Model != null)
    {
        <h1 class="text-center">Successful enrollment</h1>
        <hr />


        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-white">
                <tr>
                    <th>Course type</th>
                    <th>Course name</th>
                    <th>Student date </th>
                    <th>Enrollment date</th>
                </tr>
            </thead>

            <tbody class="table-striped">
                <tr>
                    <td>
                        @(Model.EnrolledCourse.GetType() == typeof(OnlineCourse) ? "Online" : "Regular")
                    </td>
                    <td>@Model.EnrolledCourse.Title</td>
                    <td>@Model.EnrolledStudent.StudentName</td>
                    <td>@Model.EnrollDate</td>
                </tr>
            </tbody>
        </table>
        <div class="d-flex justify-content-center">
            <a href="/Home/Index" class="btn btn-light">Back to home page</a>
        </div>
    }
}