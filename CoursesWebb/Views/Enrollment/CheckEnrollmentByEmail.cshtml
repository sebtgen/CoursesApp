@using Domain;
@model List<User>;

    @{
    bool foundStudent = false;}

@foreach (User u in Model)
{
    if (u.GetType() == typeof(Student))
    {
        foundStudent = true;
    }
}

@if (foundStudent)
    {
<h4 class="text-center">Student users</h4>
<table class="table table-striped table-bordered table-sm">
    <thead class="bg-dark text-white">
        <tr>
            <th scope="col">Email</th>
            <th>Phone number</th>
            <th>Student name</th>
            <th>Date birth</th>
        </tr>
    </thead>

    <tbody class="table-striped">
        @foreach (User u in Model)
        {
            <tr>
                @if (u.GetType() == typeof(Student))
                {
                    <td>@u.Email</td>
                    <td>@u.PhoneNumber</td>

                    Student s = u as Student;
                    <td>@s.StudentName</td>
                    <td>@s.DateBirth</td>
                }
            </tr>
        }
    </tbody>
</table>

    }
<div class="d-flex justify-content-center">
    <a href="/Instructor/ListCoursesTeach" class="btn btn-light">Back to courses</a>
</div>
